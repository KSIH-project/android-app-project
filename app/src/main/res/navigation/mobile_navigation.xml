<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/onBoardingFragment">


    <activity
        android:id="@+id/nav_signIn"
        android:name="com.project.ksih_android.ui.AuthActivity"
        android:label="Sign In"
        tools:layout="@layout/fragment_login"/>

    <fragment
        android:id="@+id/navigation_project"
        android:name="com.project.ksih_android.ui.project.ProjectFragment"
        android:label="@string/title_project"
        tools:layout="@layout/fragment_project" />

    <fragment
        android:id="@+id/navigation_member"
        android:name="com.project.ksih_android.ui.member.MemberFragment"
        android:label="@string/title_members"
        tools:layout="@layout/fragment_member" />

    <fragment
        android:id="@+id/navigation_startup"
        android:name="com.project.ksih_android.ui.startup.StartupFragment"
        android:label="@string/title_startups"
        tools:layout="@layout/fragment_startup" />

    <fragment
        android:id="@+id/navigation_event"
        android:name="com.project.ksih_android.ui.events.EventFragment"
        android:label="@string/events"
        tools:layout="@layout/fragment_event" />

    <fragment
        android:id="@+id/nav_chats"
        android:name="com.project.ksih_android.ui.chat.ChatHolderFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat_holder"/>

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.project.ksih_android.ui.onBoarding.OnBoardingFragment"
        android:label="fragment_on_boarding"
        tools:layout="@layout/fragment_on_boarding" />

    <fragment
        android:id="@+id/ksih_rules"
        android:name="com.project.ksih_android.ui.ksihrules.KSIHRules"
        android:label="KSIH Rules"
        tools:layout="@layout/fragment_ksihrules" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.project.ksih_android.ui.others.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@id/all_friends"
        android:name="com.project.ksih_android.ui.chat.friends.FriendsFragment"
        android:label="Friends"
        tools:layout="@layout/fragment_friends"/>

    <fragment
        android:id="@+id/menu_search"
        android:name="com.project.ksih_android.ui.chat.search.SearchFragment"
        android:label=""
        tools:layout="@layout/fragment_search"/>

    <fragment
        android:id="@+id/profile_settings"
        android:name="com.project.ksih_android.ui.chat.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profile_settings_to_go_my_profile"
            app:destination="@id/go_my_profile" />
    </fragment>

    <fragment
        android:id="@+id/go_my_profile"
        android:name="com.project.ksih_android.ui.chat.userSettings.ProfileSettingsFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_profile_settings"/>

</navigation>