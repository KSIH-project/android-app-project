<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chat.chatMessage.ChatMessageFragment">


    <RelativeLayout
       android:id="@+id/chat_message_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_gray_border_bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_user_name"
            android:text="Sunday david"
            android:textSize="18.5sp"
            android:textStyle="normal"
            android:layout_marginStart="96dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_active_status"
            android:text="Active Now"
            android:layout_marginStart="96dp"
            android:textSize="14sp"
            android:layout_below="@+id/chat_user_name"/>

        <FrameLayout
            android:id="@+id/chat_navigate_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chat_back"
                    android:layout_alignParentStart="true"
                    app:srcCompat="@drawable/ic_back_button"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"/>

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/chat_profile_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toEndOf="@+id/chat_back"
                    android:src="@drawable/default_profile_image"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="12dp"
                    app:riv_corner_radius="100dp"
                    app:riv_border_color="@color/colorPrimary"
                    app:riv_border_width="2dp"/>


            </RelativeLayout>
        </FrameLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="3dp"
        android:visibility="gone"
        android:background="@color/colorPrimary"
        android:layout_below="@id/chat_message_appbar"
        android:text="No internet"
        android:textAlignment="center"
        android:id="@+id/ChatConnectionTV"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chat_message_appbar"
        android:id="@+id/message_list"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:background="@drawable/white_gray_border_top">

        <ImageView
            android:id="@+id/c_send_image_BTN"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_add_a_photo"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/c_input_message"
            android:layout_weight="1"
            android:ems="10"
            android:hint="type message"
            android:inputType="textMultiLine|textCapSentences"
            android:padding="10dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/c_send_message_BTN"
            app:srcCompat="@drawable/ic_send"/>
    </LinearLayout>

</RelativeLayout>