<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chat.chatMessage.ChatMessageFragment">


    <include
        android:id="@+id/chat_message_appbar"
        layout="@layout/appbar_chat"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="3dp"
        android:visibility="gone"
        android:background="@color/colorPrimary"
        android:layout_below="@id/chat_message_appbar"
        android:text="No internet"
        android:textAlignment="center"
        android:id="@+id/ChatConnectionTV"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/message_list"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:background="@drawable/white_gray_border_top">

        <ImageView
            android:id="@+id/c_send_image_BTN"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_add_a_photo"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/c_input_message"
            android:layout_weight="1"
            android:ems="10"
            android:hint="type message"
            android:inputType="textMultiLine|textCapSentences"
            android:padding="10dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/c_send_message_BTN"
            app:srcCompat="@drawable/ic_send"/>
    </LinearLayout>

</RelativeLayout>