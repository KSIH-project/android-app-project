<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimpleFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editText_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:ems="10"
                android:hint="Name "
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editText_stack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Stack"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/editText_name"
                app:layout_constraintStart_toStartOf="@+id/editText_name"
                app:layout_constraintTop_toBottomOf="@+id/editText_name" />

            <EditText
                android:id="@+id/editText_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/editText_stack"
                app:layout_constraintStart_toStartOf="@+id/editText_stack"
                app:layout_constraintTop_toBottomOf="@+id/editText_stack" />

            <EditText
                android:id="@+id/editText_phoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Phone Number "
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/editText_email"
                app:layout_constraintStart_toStartOf="@+id/editText_email"
                app:layout_constraintTop_toBottomOf="@+id/editText_email" />

            <EditText
                android:id="@+id/editText_facebookUri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Facebook profile"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/editText_phoneNumber"
                app:layout_constraintStart_toStartOf="@+id/editText_phoneNumber"
                app:layout_constraintTop_toBottomOf="@+id/editText_phoneNumber" />

            <EditText
                android:id="@+id/editText_twitterUri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Twitter profile"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/editText_facebookUri"
                app:layout_constraintStart_toStartOf="@+id/editText_facebookUri"
                app:layout_constraintTop_toBottomOf="@+id/editText_facebookUri" />

            <EditText
                android:id="@+id/editText_githubUri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Github profile"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/editText_twitterUri"
                app:layout_constraintStart_toStartOf="@+id/editText_twitterUri"
                app:layout_constraintTop_toBottomOf="@+id/editText_twitterUri" />

            <EditText
                android:id="@+id/editText_linkedinUri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Linkedin profile"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/editText_githubUri"
                app:layout_constraintStart_toStartOf="@+id/editText_githubUri"
                app:layout_constraintTop_toBottomOf="@+id/editText_githubUri" />

            <EditText
                android:id="@+id/editText_meduimUri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Meduim profile"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/editText_linkedinUri"
                app:layout_constraintStart_toStartOf="@+id/editText_linkedinUri"
                app:layout_constraintTop_toBottomOf="@+id/editText_linkedinUri" />

            <Button
                android:id="@+id/button_jesil_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:text="Save"
                app:layout_constraintEnd_toEndOf="@+id/editText_meduimUri"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/editText_meduimUri"
                app:layout_constraintTop_toBottomOf="@+id/editText_meduimUri" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/ksih_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/editText_meduimUri"
                app:layout_constraintStart_toStartOf="@+id/editText_meduimUri"
                app:layout_constraintTop_toBottomOf="@+id/button_jesil_save" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>