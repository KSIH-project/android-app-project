<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingTollBar_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/image_events_details"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ksih_background"
                    app:layout_collapseMode="parallax" />

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/events_details_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                    app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light" />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                tools:context=".ui.events.EventDetailsFragment">

                <TextView
                    android:id="@+id/text_event_tittle_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Dev c Training with Andela" />

                <TextView
                    android:id="@+id/text_events_type_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Android"
                    app:layout_constraintEnd_toEndOf="@+id/text_event_tittle_details"
                    app:layout_constraintTop_toBottomOf="@+id/text_event_tittle_details" />

                <TextView
                    android:id="@+id/text_events_descrip_details"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="This is an event that allows us to go and go and go and go"
                    app:layout_constraintBottom_toTopOf="@+id/text_events_link_details"
                    app:layout_constraintEnd_toEndOf="@+id/text_event_tittle_details"
                    app:layout_constraintStart_toStartOf="@+id/text_event_tittle_details"
                    app:layout_constraintTop_toBottomOf="@+id/text_events_type_details" />

                <TextView
                    android:id="@+id/text_events_link_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:autoLink="all"
                    android:fontFamily="@font/roboto_medium"
                    android:text="www.google.com"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toTopOf="@+id/text_event_email_details"
                    app:layout_constraintEnd_toEndOf="@+id/text_event_tittle_details"
                    app:layout_constraintStart_toStartOf="@+id/text_event_tittle_details" />

                <TextView
                    android:id="@+id/text_event_email_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="52dp"
                    android:autoLink="email"
                    android:fontFamily="@font/roboto_medium"
                    android:text="myemailadress@gmail.com"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/text_events_link_details"
                    app:layout_constraintStart_toStartOf="@+id/text_events_link_details" />

                <TextView
                    android:id="@+id/text_phone_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:autoLink="phone"
                    android:fontFamily="@font/roboto_medium"
                    android:maxLength="11"
                    android:text="09034565969"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="@+id/text_event_email_details"
                    app:layout_constraintStart_toStartOf="@+id/text_event_email_details"
                    app:layout_constraintTop_toBottomOf="@+id/text_event_email_details">

                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
