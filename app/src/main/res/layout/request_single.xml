<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:padding="3dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/default_profile_image"
            android:id="@+id/r_profileImage"
            app:riv_border_color="@color/primaryColor"
            app:riv_border_width="0.10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingStart="4dp"
            android:weightSum="4">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="3.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/r_profileName"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_marginStart="5dp"
                        android:paddingTop="6dp"
                        android:textStyle="normal"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/verificationIcon"
                        android:layout_marginStart="5dp"
                        android:paddingTop="7dp"
                        app:srcCompat="@drawable/ic_check_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/r_profileStatus"
                    android:textSize="13sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:text=""
                    android:textStyle="normal"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/receivedIcon"
                    android:layout_marginTop="7dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_navigate_next_blue_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/sentIcon"
                    android:layout_marginTop="7dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_navigate_next_brown_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>