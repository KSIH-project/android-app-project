<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryLightColor</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert
        </item>
    </style>

    <!-- Custom theme. -->
    <style name="customTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryDarkColor</item>
    </style>


    <!-- Toolbar text style -->
    <style name="toolBarTextAppearance">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button text style -->
    <style name="buttonTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Helper text style -->
    <style name="errorTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Button Style -->
    <style name="buttonStyle">
        <item name="backgroundTint">@color/secondaryDarkColor</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="textInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_marginStart">52dp</item>
        <item name="android:layout_marginEnd">52dp</item>
        <item name="errorTextAppearance">@style/errorTextStyle</item>
    </style>

    <!-- TextInputEdittext Style -->
    <style name="textInputEdittextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:background">@color/secondaryLightColor</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
