<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom theme. -->
    <style name="customTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondaryDark</item>
    </style>

    <!-- Toolbar text style -->
    <style name="toolBarTextAppearance">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  CardView style -->
    <style name="cardViewApperance">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">8dp</item>
        <item name="contentPadding">4dp</item>

    </style>

    <!-- Button text style -->
    <style name="buttonTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Helper text style -->
    <style name="errorTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Button Style -->
    <style name="buttonStyle">
        <item name="backgroundTint">@color/button_color_background</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="textInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_marginStart">52dp</item>
        <item name="android:layout_marginEnd">52dp</item>
        <item name="errorTextAppearance">@style/errorTextStyle</item>
    </style>

    <!-- TextInputEdittext Style -->
    <style name="textInputEdittextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:background">@color/color_text_input_background</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="textHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="textBody">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="eventCardDetails">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>


    <style name="MainText" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorMainText</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>


    <style name="SubText" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/colorSubText</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
</resources>
